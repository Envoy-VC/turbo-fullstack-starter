{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"incremental": true,
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [{ "name": "next" }],
		"strictNullChecks": true
	},
	"exclude": ["node_modules", "**/*.mjs", "**/*.js"],
	"extends": "klarity/tsconfig/bundler/dom/app",
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/env.js",
		"postcss.config.mjs"
	]
}
