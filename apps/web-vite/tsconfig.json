{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "klarity/tsconfig/bundler/dom/app",
  "compilerOptions": {
    "checkJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mjs"],
  "exclude": ["node_modules", "**/*.js"]
}
